<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="web.model.dao.ReplyDao" >

    <!--댓글등록처리-->
    <insert id="rWrite" parameterType="web.model.dto.ReplyDto">
        INSERT INTO reply (rcontent, cno, uno) VALUES (#{rcontent}, #{cno}, #{bno});
    </insert>

    <!--2. 전체출력 -->
    <select id="rPrint"  resultType="web.model.dto.ReplyDto" parameterType="int">
        SELECT * FROM reply WHERE cno = #{cno};
    </select>

    <!--3. 수정 -->
    <update id="bUpdate" parameterType="web.model.dto.BoardDto">
        update comment set ccontent= #{ ccontent }, };
    </update>
    <!--4. 삭제 -->
    <delete id="rDelete" parameterType="int">
        DELETE FROM reply WHERE rno = #{rno};
    </delete>


</mapper> <!-- mapper end -->