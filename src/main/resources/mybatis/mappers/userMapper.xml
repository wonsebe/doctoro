<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="web.model.dao.UserDao">    <!-- mapper start -->
    <!-- namespace="매핑할 인터페이스 경로(위치)" -->

    <!-- 1. 회원가입 -->
    <insert id="userSignup" parameterType="web.model.dto.UserDto">
        insert into users (id, password, name, gender, phone, distinction) values
        (#{id}, #{password}, #{name}, #{gender}, #{phone}, #{distinction});
    </insert>

    <!-- 2. 아이디 중복 검사 -->
    <select id="idCheck" resultType="String" parameterType="String">
        select id from users where id = #{id};
    </select>

    <!-- 3. 로그인 -->
    <select id="userLogin" resultType="String" parameterType="web.model.dto.UserDto">
        select * from users where id = #{id} and password = #{password};
    </select>


</mapper>   <!-- mapper end -->
